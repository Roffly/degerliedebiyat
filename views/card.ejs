<div id=<%= id %> class=" md:drop-shadow-xl xl:w-1/3 md:w-1/2 p-4">
    <div
      class="
        c-card
        block
        bg-white
        shadow-md
        hover:shadow-xl
        rounded-lg
        overflow-hidden
      "
    >
      <img
        class="
          lg:h-60
          xl:h-56
          md:h-64
          sm:h-72
          xs:h-72
          h-72
          rounded
          w-full
          object-cover object-center
          mb-4
        "
    

        alt="Image Size 720x400"
        src=<%= resim %>
      />
      <div class="p-4">
        <h1
          class="tracking-widest text-red-500 text-xs font-bold title-font"
        >
        
        <% if (id == 1938) { %>
          <span><%= isim %></span>  <span> <img style="width: 30px;" src="https://cdn.discordapp.com/emojis/818019772390178816.gif"></span>
        <% } else { %>
          <%= isim %>  
          <% } %>
        </h1>
        <h2
          class="
            text-lg text-gray-900
            font-medium
            title-font
            mb-4
            whitespace-nowrap

            ...
          "
        >
        <%= ozet %>
        </h2>
       

        <div class="py-4 border-t text-xs text-gray-700">
          <div class="grid grid-cols-6 gap-1">
            <div class="col-span-2">
              Eserleri:
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-red-400
                  rounded-full
                "
                ><%= kitap %></span
              >
            </div>

            <div class="col-span-2">
              Doğum Tarihi:
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-green-400
                  rounded-full
                "
                ><%= dogum %></span
              >
            </div>

            <div class="col-span-2">
              Ölüm Tarihi:
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-blue-400
                  rounded-full
                "
                > <%= olum %>

            </div>
            
          </div>
        </div>

      </div>
      
    </div>
 
    
